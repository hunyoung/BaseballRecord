<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/teamRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:visibility="visible"
                >
            </android.support.v7.widget.RecyclerView>

        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text ="연도별 순위"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="5"
            >
            <TextView
                android:id="@+id/team_doosan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/search_border"
                android:text="@string/team_doosan"/>
            <TextView
                android:id="@+id/team_sk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/search_border"
                android:text="@string/team_sk"/>
            <TextView
                android:id="@+id/team_hanhwa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/search_border"
                android:text="@string/team_hanhwa"/>
            <TextView
                android:id="@+id/team_lg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/search_border"
                android:text="@string/team_lg"/>
            <TextView
                android:id="@+id/team_kt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/search_border"
                android:text="@string/team_kt"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="5"
            >
            <TextView
                android:id="@+id/team_lotte"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/search_border"
                android:text="@string/team_lotte"/>
            <TextView
                android:id="@+id/team_samsung"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/search_border"
                android:text="@string/team_samsung"/>
            <TextView
                android:id="@+id/team_kia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/search_border"
                android:text="@string/team_kia"/>
            <TextView
                android:id="@+id/team_nc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/search_border"
                android:text="@string/team_nc"/>
            <TextView
                android:id="@+id/team_nexen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/search_border"
                android:text="@string/team_nexen"/>
        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:max="30"
                android:min="1"
             />
            <TextView
                android:id="@+id/tvYMax"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="@string/dash"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:max="10"
                android:min="1"
                />

            <TextView
                android:id="@+id/tvXMax"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/dash"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>


    </LinearLayout>




</ScrollView>
